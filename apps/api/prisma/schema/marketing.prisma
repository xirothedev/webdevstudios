model Voucher {
  id    String       @id @default(cuid())
  code  String       @unique @db.VarChar(20)
  type  DiscountType
  value Decimal      @db.Money // Discount value (amount or %)

  minSpend    Decimal? @db.Money // Minimum order
  maxDiscount Decimal? @db.Money // Maximum discount (for % type)

  usageLimit Int @default(100) // Total usage count
  usedCount  Int @default(0) // Used count

  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(true)

  @@map("vouchers")
}

model Review {
  id      String  @id @default(cuid())
  rating  Int     @default(5) // 1-5 stars
  comment String? @db.Text

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@map("reviews")
}
